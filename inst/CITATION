year <- format(Sys.Date(), "%Y")
note <- sprintf("R package version %s", meta$Version)

citHeader("To cite galah in publications use:")

bibentry(bibtype = "Manual",
    "title" = "galah: Biodiversity Data from the GBIF Node Network",
    author = c(person("Martin", "Westgate"),
               person("Dax", "Kellie"),
               person("Shandiya", "Balasubramaniam"),
               person("Matilda", "Stevenson")),
     year = year,
     note = note,
     url = "https://CRAN.R-project.org/package=galah")
